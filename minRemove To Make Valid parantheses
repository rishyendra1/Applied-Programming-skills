import java.util.*;

class Solution {
    public String minRemoveToMakeValid(String s) {

        Stack<Integer> stack = new Stack<>();
        boolean[] remove = new boolean[s.length()];
        char[] arr = s.toCharArray();

        // First pass
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] == '(') {
                stack.push(i);
            } 
            else if (arr[i] == ')') {
                if (stack.isEmpty()) {
                    remove[i] = true; // extra ')'
                } else {
                    stack.pop();
                }
            }
        }

        // Remove unmatched '('
        while (!stack.isEmpty()) {
            remove[stack.pop()] = true;
        }

        // Build result
        StringBuilder sb = new StringBuilder();
        for (int i = 0; i < arr.length; i++) {
            if (!remove[i]) {
                sb.append(arr[i]);
            }
        }

        return sb.toString();
    }
}
